#include "imx6qp-var-som.dtsi"

&ldb {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";
		primary;

		display-timings {
			native-mode = <&timing0r>;
			timing0r: m104gnx1 {
				clock-frequency = <65000000>;
				hactive = <1024>;
				vactive = <768>;
				hback-porch = <160>;
				hfront-porch = <24>;
				vback-porch = <29>;
				vfront-porch = <3>;
				hsync-len = <136>;
				vsync-len = <6>;
			};
		};
	};

};

powerfailure {
                compatible = "powerfailure";
                poff-gpio  = <&gpio5 12 0>;
                atpfail-gpio   = <&gpio5 17 0>;
        };
};

&mxcfb1 {
	interface_pix_fmt = "RGB24";
};
